{
  "agent": {
    "model": "openai/gpt-5.1",
    "thinking": null
  },
  "agents": {
    "defaults": {
      "workspace": "./workspace",
      "subagents": {
        "allowAgents": [
          "*"
        ],
        "archiveAfterMinutes": 120
      }
    }
  },
  "tools": {
    "allow": [
      "sessions_spawn",
      "sessions_send",
      "sessions_list",
      "sessions_history",
      "read",
      "write",
      "edit"
    ],
    "deny": [
      "mail",
      "notes",
      "browser",
      "bash",
      "process",
      "search",
      "calendar"
    ],
    "sessions": {
      "visibility": "tree"
    },
    "subagents": {
      "tools": [
        "read",
        "write",
        "edit"
      ]
    }
  },
  "session": {
    "agentToAgent": {
      "maxPingPongTurns": 3
    }
  },
  "cron": [
    {
      "id": "story-heartbeat",
      "schedule": "*/3 * * * *",
      "task": "Run the heartbeat check as described in HEARTBEAT.md. Read MEMORY.md to check story state. If there is an active story and the user appears idle, send a gentle nudge. Otherwise reply HEARTBEAT_OK.",
      "label": "Story idle check (every 3 minutes)"
    }
  ],
