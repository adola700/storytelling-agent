{
  "agents": {
    "defaults": {
      "model": {
        "primary": "openai/gpt-4o"
      },
      "workspace": "./workspace",
      "subagents": {
        "archiveAfterMinutes": 120
      }
    }
  },
  "gateway": {
    "mode": "local"
  },
  "tools": {
    "allow": [
      "sessions_spawn",
      "sessions_send",
      "sessions_list",
      "sessions_history",
      "read",
      "write",
      "edit"
    ],
    "deny": [
      "mail",
      "notes",
      "browser",
      "bash",
      "process",
      "search",
      "calendar"
    ],
    "sessions": {
      "visibility": "tree"
    },
    "subagents": {
      "tools": {
        "read": true,
        "write": true,
        "edit": true
      }
    }
  },
  "cron": {
    "story-heartbeat": {
      "schedule": "*/3 * * * *",
      "task": "Run the heartbeat check as described in HEARTBEAT.md. Read MEMORY.md to check story state. If there is an active story and the user appears idle, send a gentle nudge. Otherwise reply HEARTBEAT_OK.",
      "label": "Story idle check (every 3 minutes)"
    }
  },
  "env": {
    "OPENAI_API_KEY": "sk-proj-..."
  }
}